@model _60322_Ivanov_Egor.Models.Cart

@{
    ViewBag.Title = "Index";
}

<h2>Ваша корзина</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Наименование</th>
            <th>Количество</th>
            <th>Всего стоимость</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GetItems())
        {
            <tr>
                <td>@item.Product.ProdName</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.ProdPrice * item.Quantity) </td>
            </tr>
        }
    </tbody>
</table>
<a href="@TempData[ "returnUrl"] " class="btn btn-default">
    Вернуться к
    меню
</a>

