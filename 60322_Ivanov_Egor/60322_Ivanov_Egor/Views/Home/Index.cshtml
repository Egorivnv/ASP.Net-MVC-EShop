
@{
    ViewBag.Title = "Главная страница";
}

<div class="container">
    <h2>Список</h2>
    <div class="h-list">
        <ol type="A">
            @for (int i = 1; i < 5; i++)
            {
                <li>Элемент @i списка</li>
            }
        </ol>
    </div>
    <hr />
    <h2>Форма</h2>
    @using (Html.BeginForm("index", "home", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="col-md-8 col-md-offset-2">
            @Html.DropDownList("Colors",(SelectList)ViewBag.ListColors, "Выбирите цвет")
            @Html.DropDownList("Users");
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-2">
                <div class="checkbox">
                    <label>@Html.CheckBox("cb1")Чек-бокс 1</label>
                </div>
                @*<input type="checkbox" name="cb1" value="option1" id="cb1" />
                    <label for="cb1">Чек-бокс 1</label>*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-2">
                <div class="checkbox">
                    <label>@Html.CheckBox("cb2")Чек-бокс 2</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-2">
                <label class="radio-inline">
                    @Html.RadioButton("rb1", "r1") Радио-1
                </label>
                <label class="radio-inline">
                    @Html.RadioButton("rb1", "r2") Радио-2
                    @*<input type="radio" name="rb1" value="option1" />
                        Радио-2*@
                </label>
            </div>
        </div>
        <div class="form-group">
            <label for="input-login" class="col-md-2 control-label">Логин</label>
            <div class="col-md-8">
                @*<input type="text" class="form-control" name="name" id="input-login" placeholder="Введите логин" />*@
                @Html.TextBox("name", null, new { @class = "form-control", id = "input-login", placeholder = "Введите логин" })
            </div>
        </div>
        <div class="form-group">
            <label for="input-password" class="col-md-2 control-label">Пароль</label>
            <div class="col-md-8">
                @*<input type="password" class="form-control" name="password" id="input-password" placeholder="Введите пароль" />*@
                @Html.Password("input-password", null, new { @class = "form-control", placeholder = "Введите пароль" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <button type="submit" class="btn btn-default">Отправить</button>
            </div>
        </div>
    }

</div>

@section SidePanel
{
    <div class="alert-success">
        <h4><i>Пример работы с секциями на странице шаблона</i></h4>
    </div>
    @*@Html.Action("Side","Menu")*@
}
