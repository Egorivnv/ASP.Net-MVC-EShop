<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    @Styles.Render("~/bundles/styles")
    @RenderSection("Styles", false)
</head>
<body>

    <div class="header-strip"> @*Заголовок начало*@
        <div class="container">

            <!-- Панель аутонтификации клиента -->
           @Html.Action("UserInfo", "Menu");
            <!-- /Панель аутонтификации клиента -->

            <!-- панель навигации-->
            <div class="row">
                <div class="row-logo">
                    <div class="navbar navbar-inverse" role="navigation">
                        <div class="logo">
                            @Html.ActionLink("Ivanov","Index","Home", new { @class= "navbar-brand" })
                            @*<a class="navbar-brand" href="index.html">Ivanov</a>*@
                        </div>
                        @Html.Action("Main","Menu", new {c= Request.RequestContext.RouteData.Values["controller"] })
                    </div>
                </div>
            </div>
            <!-- /панель навигации-->

        </div>
    </div> <!--Заголовок окончание-->

    <div class="main-body"> <!--Основная часть страницы начало-->
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-3">
                    <h2>@ViewBag.MyText</h2>
                </div>
            </div>
            <div class="row">
                <!--Левая боковая панель-->
                <div class="col-md-3">
                    @RenderSection("SidePanel", required: false)
                </div>
                <!--/Левая боковая панель (конец)-->
                <!--/Основная панель-->
                <div class="col-md-9">
                    @RenderBody()
                </div>
                <!--/Основная панель (конец)-->
            </div>
        </div>
    </div> <!--Основная часть страницы окончание-->

    <!--Футер страницы начало-->
    <div class="footer-strip"> 
        <div class="container">
            @Html.Action("Map","Menu", new { c = Request.RequestContext.RouteData.Values["controller"] })
        </div>
    </div> <!-- /Футер страницы окончание-->

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("Scripts", false)
</body>
</html>
